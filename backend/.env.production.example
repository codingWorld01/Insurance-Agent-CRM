# Production Environment Configuration

# Database Configuration
DATABASE_URL="postgresql://username:password@production-host:5432/insurance_crm_prod"

# JWT Configuration
JWT_SECRET="your-production-jwt-secret-key-must-be-very-secure"
JWT_EXPIRES_IN="24h"

# Server Configuration
PORT=5000
NODE_ENV=production
CORS_ORIGIN="https://your-domain.com"

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=warn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# SSL Configuration (if needed)
SSL_CERT_PATH=""
SSL_KEY_PATH=""

# Health Check
HEALTH_CHECK_ENDPOINT="/health"

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME="your-production-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-production-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-production-cloudinary-api-secret"
CLOUDINARY_UPLOAD_PRESET="your-production-upload-preset"
CLOUDINARY_FOLDER="client-documents"

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx"