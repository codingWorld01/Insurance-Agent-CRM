{
  "name": "backend",
  "version": "1.0.0",
  "description": "Insurance CRM Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx src/prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:setup": "prisma generate && prisma db push && npm run db:seed",
    "db:studio": "prisma studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist",
    "prebuild": "npm run clean && npm run db:generate",
    "postbuild": "echo \"Backend build completed successfully\"",
    "docker:build": "docker build -t insurance-crm-backend .",
    "docker:run": "docker run -p 5000:5000 insurance-crm-backend",
    "deploy:prepare": "npm run build && npm run db:migrate:deploy",
    "health-check": "curl -f http://localhost:5000/health || exit 1",
    "migrate:policies": "tsx src/scripts/migratePolicies.ts",
    "migrate:policies:validate": "tsx src/scripts/migratePolicies.ts validate",
    "migrate:policies:backup": "tsx src/scripts/migratePolicies.ts backup",
    "migrate:policies:dry-run": "tsx src/scripts/migratePolicies.ts migrate --dry-run",
    "migrate:policies:run": "tsx src/scripts/migratePolicies.ts migrate",
    "migrate:policies:verify": "tsx src/scripts/migratePolicies.ts verify",
    "migrate:policies:status": "tsx src/scripts/migratePolicies.ts status",
    "migrate:policies:cleanup": "tsx src/scripts/migratePolicies.ts cleanup",
    "db:reset-and-seed": "tsx src/scripts/resetAndSeedDatabase.ts",
    "db:dummy-data": "tsx src/scripts/resetAndSeedDatabase.ts",
    "db:quick-seed": "tsx src/scripts/quickSeed.ts"
  },
  "keywords": [
    "crm",
    "insurance",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@types/node-cache": "^4.1.3",
    "bcrypt": "^5.1.1",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "prisma": "^6.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
