# Policy Migration Configuration Example
# Copy this to .env.migration and adjust values as needed

# Database connection (required)
DATABASE_URL="postgresql://username:password@localhost:5432/insurance_crm"

# Migration Phase Configuration
# Options: preparation, migration, transition, complete
POLICY_MIGRATION_PHASE=migration

# Template System Configuration
USE_TEMPLATE_SYSTEM=true
ALLOW_FALLBACK=true
MIGRATE_ON_READ=false

# Migration Settings
MIGRATION_BATCH_SIZE=100
ENABLE_AUTO_MIGRATION=false
ENABLE_ROLLBACK=true
BACKUP_RETENTION_DAYS=30

# Validation Settings
STRICT_MODE=true
ALLOW_DUPLICATES=true
VALIDATE_DATES=true
VALIDATE_AMOUNTS=true

# Logging
NODE_ENV=development

# Example configurations for different phases:

# Phase 1: Preparation (validate and prepare data)
# POLICY_MIGRATION_PHASE=preparation
# USE_TEMPLATE_SYSTEM=false
# ALLOW_FALLBACK=true
# MIGRATE_ON_READ=false

# Phase 2: Migration (run the migration)
# POLICY_MIGRATION_PHASE=migration
# USE_TEMPLATE_SYSTEM=true
# ALLOW_FALLBACK=true
# MIGRATE_ON_READ=false

# Phase 3: Transition (gradual switchover)
# POLICY_MIGRATION_PHASE=transition
# USE_TEMPLATE_SYSTEM=true
# ALLOW_FALLBACK=true
# MIGRATE_ON_READ=true

# Phase 4: Complete (new system only)
# POLICY_MIGRATION_PHASE=complete
# USE_TEMPLATE_SYSTEM=true
# ALLOW_FALLBACK=false
# MIGRATE_ON_READ=false